# Production Environment Configuration
# Copy this file to .env and fill in your actual values

# API Keys (REQUIRED for production)
MORALIS_API_KEY=your_moralis_api_key_here
ALCHEMY_API_KEY=your_alchemy_api_key_here
COINGECKO_API_KEY=your_coingecko_api_key_here

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Cache Configuration (in seconds)
CACHE_TTL_HOLDER_DATA=600      # 10 minutes
CACHE_TTL_PRICE_DATA=60         # 1 minute
CACHE_TTL_TOKEN_INFO=3600       # 1 hour

# Rate Limiting
API_RATE_LIMIT=5                # requests per second

# Logging
LOG_LEVEL=info                  # error, warn, info, debug
LOG_FORMAT=json                 # json or text

# Monitoring (Optional)
ENABLE_METRICS=true
METRICS_PORT=9090

# Security
ENABLE_CORS=true
ALLOWED_ORIGINS=*

# Agent Configuration
AGENT_NAME=token-holder-monitor
AGENT_VERSION=0.1.0

# X402 Payment Configuration (Lucid Dreams integration)
X402_ENABLED=true
FACILITATOR_URL=https://facilitator.daydreams.systems
PAY_TO_WALLET=your_wallet_address_here
PAYMENT_NETWORK=base
PAYMENT_AMOUNT=0.01             # Price in USDC per analysis call
